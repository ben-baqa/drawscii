WINDOW_TITLE = "Drawscii";
WINDOW_WIDTH = 800;
WINDOW_HEIGHT = 600;
-- FONT_LOCATION = "assets/font.tff"

love.conf = t =>{
    t.console = true;
    t.modules.joystick = false;

    let w = t.window;
    w.width = WINDOW_WIDTH;
    w.heght = WINDOW_HEIGHT;
    w.minWidth = WINDOW_WIDTH;
    w.minHeight = WINDOW_HEIGHT;
    w.resizable = true;
    w.fullscreen = false;
    w.title = WINDOW_TITLE;

    let m = t.modules;
    m.joystick = false;
};